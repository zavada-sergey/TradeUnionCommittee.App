@model IEnumerable<TradeUnionCommittee.BLL.DTO.Children.ChildrenDTO>
@{
    ViewData["Title"] = "Index";
}

<section class="add-user container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-12 add-user_block">
            <div class="row">
                <a asp-controller="Employee" asp-action="Index" asp-route-id="@ViewData["HashIdEmployee"]" class="back-link">Повернутися</a>
                <hr />
                <div class="form-group">
                    <a asp-action="Create" asp-route-id="@ViewData["HashIdEmployee"]" class="btn btn-success">Додати</a>
                </div>
            </div>
            <div class="row main-block">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Прізвище ім'я по батькові
                            </th>
                            <th>
                                Дата народження
                            </th>
                            <th>
                                Вік
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @if (TempData["ErrorsList"] == null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.FullName
                                    </td>

                                    <td>
                                        @item.BirthDate.ToString("dd.MM.yyyy")
                                    </td>

                                    <td>
                                        @item.Age
                                    </td>

                                    <td class="text-right">
                                        <div class="btn-group">
                                            <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown"></button>
                                            <div class="dropdown-menu">
                                                <a class="dropdown-item" asp-action="Update" asp-route-id="@item.HashId">Редагувати</a>

                                                @if (User.IsInRole("Admin"))
                                                {
                                                    <a class="dropdown-item delete"
                                                       href=""
                                                       data-controller="Children"
                                                       data-action="Delete"
                                                       data-id="@item.HashId"
                                                       data-body-message="Ви впевнені, що хочете видалити дитину?">Видалити</a>
                                                }
                                                <a class="dropdown-item" asp-controller="TravelChildren" asp-action="Index" asp-route-id="@item.HashId">Поїздки</a>
                                                <a class="dropdown-item" asp-controller="WellnessChildren" asp-action="Index" asp-route-id="@item.HashId">Оздоровлення</a>

                                                @if (User.IsInRole("Admin") || User.IsInRole("Accountant"))
                                                {
                                                    <a class="dropdown-item" asp-controller="TourChildren" asp-action="Index" asp-route-id="@item.HashId">Путівки</a>
                                                }

                                                <a class="dropdown-item" asp-controller="ActivityChildren" asp-action="Index" asp-route-id="@item.HashId">Заходи</a>
                                                <a class="dropdown-item" asp-controller="CulturalChildren" asp-action="Index" asp-route-id="@item.HashId">Культурно-просвітницькі заклади</a>
                                                <a class="dropdown-item" asp-controller="GiftChildren" asp-action="Index" asp-route-id="@item.HashId">Подарунки</a>
                                                <a class="dropdown-item" asp-controller="HobbyChildren" asp-action="Index" asp-route-id="@item.HashId">Хобі</a>
                                            </div>
                                        </div>
                                    </td>

                                </tr>
                            }
                        }
                        else
                        {
                            await Html.RenderPartialAsync("_Errors", TempData["ErrorsList"]);
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>


@if (User.IsInRole("Admin"))
{
    @section Scripts
    {
        <environment include="Development">
            <script src="~/js/delete.js"></script>
        </environment>

        <environment exclude="Development">
            <script src="~/js/delete.min.js" asp-append-version="true"></script>
        </environment>
    }
}