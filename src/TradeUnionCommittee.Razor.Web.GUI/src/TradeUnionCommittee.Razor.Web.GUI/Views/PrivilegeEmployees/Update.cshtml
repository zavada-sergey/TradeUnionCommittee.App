@model TradeUnionCommittee.ViewModels.ViewModels.Employee.UpdatePrivilegeEmployeesViewModel
@{
    ViewData["Title"] = "Update";
}

<section class="add-user container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-12 add-user_block">

            <div class="row align-items-center mt-3">
                <div class="col-md-10">
                    <h1>Редагування пільги</h1>
                </div>
            </div>
            <hr>
            @if (TempData["ErrorsList"] == null)
            {
                <form asp-action="Update">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="HashId" />
                    <input type="hidden" asp-for="HashIdEmployee" />
                    <input type="hidden" asp-for="RowVersion" />

                    <div class="row">

                        <div class="form-group col-lg-4 col-xl-6">
                            <label asp-for="HashIdPrivileges" class="control-label required">Пільга</label><br>
                            <select asp-for="HashIdPrivileges" asp-items="@ViewBag.Privilege" class="custom-select"></select>
                            <span asp-validation-for="HashIdPrivileges" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="row">

                        <div class="form-group col-lg-4 col-xl-6">
                            <label class="custom-control custom-checkbox">
                                <input type="checkbox" asp-for="CheckPrivileges" class="custom-control-input dinamic">
                                <span class="custom-control-indicator"></span>
                                <span class="custom-control-description">В даний час на пільзі?</span>
                            </label>
                        </div>

                    </div>

                    <div class="row">

                        <div class="form-group col-lg-12">
                            <label asp-for="Note">Примітка</label>
                            <textarea asp-for="Note" class="form-control" rows="6"></textarea>
                        </div>

                    </div>

                    <div class="row justify-content-between">
                        <div class="form-group col-lg-3">
                            <div>
                                <a asp-controller="PrivilegeEmployees" asp-action="Index" asp-route-id="@Model.HashIdEmployee">Повернутися</a>
                            </div>
                        </div>
                        <div class="col-md-6 text-right">
                            <input type="submit" value="Зберегти" class="btn btn-success btn-default" />
                        </div>
                    </div>

                </form>
            }
            else
            {
                await Html.RenderPartialAsync("_Errors", TempData["ErrorsList"]);
            }
        </div>
    </div>
</section>

@if (TempData["ErrorsListConfirmed"] != null)
{
    await Html.RenderPartialAsync("_Errors", TempData["ErrorsListConfirmed"]);
}